<Window x:Class="task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task1"
        mc:Ignorable="d"
       Title="Dynamic Button Example" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.498,0.398">
        <StackPanel x:Name="buttonPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="click click" Width="100" Height="30" Margin="10" MouseEnter="Button_MouseEnter" />
        </StackPanel>
    </Grid>
</Window>
